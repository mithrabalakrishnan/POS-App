<?xml version="1.0" encoding="UTF-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_height="wrap_content"
    android:layout_width="match_parent">
    <FrameLayout android:id="@+id/frameCoupon"
        android:layout_height="wrap_content"
        android:layout_width="match_parent">
        <ImageView android:id="@+id/imageSubtract"
            android:layout_gravity="center"
            android:layout_height="@dimen/_104pxh"
            android:layout_width="@dimen/_342pxh"
            android:scaleType="fitXY"
            android:src="@drawable/img_subtract"
            tools:ignore="ContentDescription" tools:src="@drawable/img_subtract"/>
        <LinearLayout android:id="@+id/linearRowcar"
            android:layout_gravity="center"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/_10pxv"
            android:layout_marginEnd="@dimen/_48pxh"
            android:layout_marginStart="@dimen/_48pxh"
            android:layout_marginTop="@dimen/_8pxv"
            android:layout_width="match_parent" android:orientation="horizontal">
            <ImageView android:id="@+id/imageLogo"
                android:layout_height="@dimen/_34pxh"
                android:layout_marginBottom="@dimen/_24pxv"
                android:layout_marginTop="@dimen/_26pxv"
                android:layout_width="@dimen/_40pxh"
                android:scaleType="fitXY"
                android:src="@drawable/black_friday"
                tools:ignore="ContentDescription" tools:src="@drawable/black_friday"/>
            <View android:background="@color/gray_700_33"
                android:id="@+id/lineVectorOne"
                android:layout_height="@dimen/_85pxv"
                android:layout_marginStart="@dimen/_36pxh"
                android:layout_weight="0.01" android:layout_width="0dp"/>
            <LinearLayout android:gravity="start"
                android:id="@+id/linearColumnprice"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/_13pxh"
                android:layout_marginTop="@dimen/_10pxv"
                android:layout_weight="0.77" android:layout_width="0dp" android:orientation="vertical">
                <TextView android:ellipsize="end"
                    android:id="@+id/txtPrice"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="@dimen/_10pxh"
                    android:layout_marginStart="@dimen/_1pxh"
                    android:layout_width="wrap_content"
                    android:singleLine="true"
                    android:text="â‚¬ 10"
                    style="@style/txtMontserratsemibold24"
                    />
                <TextView android:ellipsize="end"
                    android:id="@+id/txtName"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="@dimen/_10pxh"
                    android:layout_marginStart="@dimen/_1pxh"
                    android:layout_marginTop="@dimen/_4pxv"
                    android:layout_width="match_parent"
                    android:singleLine="true"
                    android:textAllCaps="true"
                    android:text="McDonalds"
                    style="@style/txtMontserratmedium16_1"
                  />
                <TextView android:ellipsize="end"
                    android:id="@+id/txtMonth"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/_17pxv"
                    android:layout_width="match_parent"
                    android:singleLine="true"
                    style="@style/txtMontserratmedium10"
                    android:text="Valid until 01 February 2022"/>
            </LinearLayout>
        </LinearLayout>
    </FrameLayout>
</LinearLayout>
